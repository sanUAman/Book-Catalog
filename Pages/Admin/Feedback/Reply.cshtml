@page "{id:int}"
@model RazorPagesBook.Pages.Admin.Feedback.ReplyModel
@{
    ViewData["Title"] = "Відповідь на звернення";
}
<a asp-page="./Index" class="btn btn-link ps-0">&larr; До списку</a>
<h1 class="mb-3">@ViewData["Title"]</h1>
@if (Model.Item is null)
{
    <div class="alert alert-danger">Запис не знайдено.</div>
}
else
{
    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body">
            <div><strong>Від:</strong> @Model.Item.Name (@Model.Item.Email)</div>
            <div><strong>Тема:</strong> @Model.Item.Subject</div>
            <div class="mt-2"><strong>Повідомлення:</strong><br />@Model.Item.Message</div>
            <div class="text-muted small mt-2">
                Надіслано:
                @Model.Item.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
            </div>
            @if (Model.Item.AdminRepliedAt != null)
            {
                <hr />
                <div class="text-muted small">
                    Остання відповідь:
                    @Model.Item.AdminRepliedAt.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm")
                    (@Model.Item.AdminRepliedBy)
                </div>
                <div><strong>Тема відповіді:</strong> @Model.Item.AdminReplySubject</div>
        <pre class="mt-2 mb-0" style="white-space:pre-wrap">@Model.Item.AdminReplyBody</pre>
            }
        </div>
    </div>
    <form method="post" asp-page-handler="Send" class="card border-0 shadow-sm">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Input.Subject" class="form-label"></label>
                <input asp-for="Input.Subject" class="form-control" />
                <span asp-validation-for="Input.Subject" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.Body" class="form-label"></label>
    <textarea asp-for="Input.Body" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Input.Body" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit">Надіслати відповідь</button>
            <a class="btn btn-outline-secondary" asp-page="./Index">Скасувати</a>
        </div>
    </form>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
